<TicketItem>:
    text_size: [None, None]
    size: self.texture_size
    size_hint: (None, 0.05)
    font_name: 'Roboto'
    markup: True
    font_size: 50
    padding: (0, 0)
    opacity: 0
    background_normal: ''
    #background_active: ''
    background_color: 0, 0, 0, 0.6

<NewTicketItem>:
    color: 1, 0, 0, 1
    font_size: 90
    size_hint: (None, 0.1)

WindowManager:
    DashboardScreen:
        id: 'dashboard'
        canvas.before:
            Color:
                rgba: 0, 0, 0, 0.2
            Rectangle:
                pos: self.pos
                #size: root.bg_texture.texture.size
                size: self.size
                source: 'bg.jpg'
            Color:
                rgba: 0, 0, 0, 0.2



        BoxLayout:
            orientation: 'vertical'
            padding: 20

            StackLayout:
                id: tickets
                spacing: 10




            Label:
                id: spacer
                size_hint: (1, 0.2)


        AnchorLayout:
            anchor_y: 'bottom'
            anchor_x: 'left'
            size_hint: (1, 0.2)
            padding: 20

            BoxLayout:
                orientation: 'horizontal'

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: (0.5, None)


                    Label:
                        id: time
                        text: '[b]00[/b]:00'
                        font_name: 'Roboto'
                        markup: True
                        font_size: 128
                        size_hint: (None, 1)
                        pos_hint: {'right': 1}
                        size: (self.texture_size[0], self.line_height)

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: (None, None)

                        Label:
                            id: seconds
                            text: '00'
                            font_name: 'Roboto'
                            markup: True
                            font_size: 60
                            halign: 'left'
                            pos_hint: {'left': 1}
                            size_hint: None, 1
                            #size: (self.texture_size[0], self.line_height / 2)
                            size: (self.texture_size[0], root.ids.time.height / 2)

                        Label:
                            id: ampm
                            text: 'XM'
                            font_name: 'Roboto'
                            markup: True
                            font_size: 60
                            halign: 'left'
                            pos_hint: {'left': 1}
                            size_hint: None, 1
                            size: (self.texture_size[0], root.ids.time.height / 2)


                Label:
                    id: calendar
                    text: 'Monday, Octember 32'
                    font_name: 'Roboto'
                    markup: True
                    font_size: 90
                    size: self.texture_size
                    size_hint: (None, None)
                    #size: (self.texture_size[0], self.line_height)