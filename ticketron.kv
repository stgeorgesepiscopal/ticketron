# Wrap in WindowManager so new screens can be added later if desired
WindowManager:

    # Main Screen
    DashboardScreen:
        id: 'dashboard'
        canvas.before:
            Rectangle:
                pos: self.pos
                #size: root.bg_texture.texture.size
                size: self.size
                source: 'assets/images/bg.jpg'
        # Big box around everything
        BoxLayout:
            orientation: 'vertical'
            padding: 20
            size_hint: 1, 1

            # Big box around content area
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 0.9, 1

                # Left side layout
                StackLayout:
                    id: left_layout
                    padding: [95,0,0,0]
                    # orientation: 'vertical'
                    orientation: 'tb-lr'
                    size_hint: (1, 1)

                    # Open Tickets header
                    #BoxLayout:
                    #    orientation: 'vertical'
                    #    #size_hint: 1, .5

                    Button:
                        id: ticket_header
                        text: 'Open Tickets'
                        background_normal: ''
                        background_color: 0, 0, 0, 0
                        size_hint: (1, .15)
                        #height: 70
                        font_size: 70
                        markup: True


                    # Open Tickets items
                    ScrollView:
                        size_hint: (1, .35)
                        # size: (self.parent.width, self.parent.height)
                        StackLayout:
                            size_hint: 1, None
                            width: self.parent.width
                            height: self.minimum_height
                            id: tickets
                            spacing: 10

                        # Pinned Items section

                    Label:
                        id: pins_header
                        text: 'Pinned Items'
                        #height: 50
                        font_size: 60
                        markup: True
                        padding_x: 10
                        padding_y: 5
                        size_hint: (1, .15)
                        size: self.texture_size

                    # Pinned Tickets items
                    ScrollView:
                        size_hint: (1, .2)
                        # size: (self.parent.width, self.parent.height)
                        StackLayout:
                            size_hint_x: 1
                            size_hint_y: None
                            size_hint: 1, None
                            width: self.parent.width
                            height: self.minimum_height
                            id: pins
                            spacing: 10

                    # Spacer to avoid the bottom
                    BoxLayout:
                        size_hint: (1, .2)


                # Right side layout
                BoxLayout:
                    id: right_layout
                    orientation: 'vertical'
                    padding: 10
                    size_hint: (0, 1)
                    
		            # Anchors settings button to top right
                    AnchorLayout:
                        anchor_x: 'right'
                        anchor_y: 'top'
                        size_hint: (1, .05) 

                        Button:
                            id: options_button
                            markup: True
                            font_name: 'FontAwesome'
                            font_size: 30
                            text: 'Ôè≤'
                            padding_x: 10
                            padding_y: 5
                            on_press: app.open_settings()
                            size_hint: (.1, .1)
                            #size: self.texture_size
		    


		            # Spacer to avoid the bottom
		            Label:
		                size_hint: (1, .2)

        # Spacer to avoid the bottom
        Label:
            size_hint: (1, .2)


        # Time / Date section - anchored
        AnchorLayout:
            anchor_y: 'bottom'
            anchor_x: 'left'
            size_hint: (1, 0.2)
            padding: 20

            # Time / Date horizontal split
            BoxLayout:
                orientation: 'horizontal'

                # Time on left
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: (0.5, None)

                    # Time 00:00
                    Label:
                        id: time
                        text: '[b]00[/b]:00'
                        font_name: 'Roboto'
                        markup: True
                        font_size: 128
                        size_hint: (None, 1)
                        pos_hint: {'right': 1}
                        size: (self.texture_size[0], self.line_height)
		   
                    # Seconds / AM/PM Vertical split
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: (None, None)

                        # Seconds
	                    Label:
	                        id: seconds
	                        text: '00'
	                        font_name: 'Roboto'
	                        markup: True
	                        font_size: 60
	                        halign: 'left'
	                        pos_hint: {'left': 1}
	                        size_hint: None, 1
	                        #size: (self.texture_size[0], self.line_height / 2)
	                        size: (self.texture_size[0], root.ids.time.height / 2)

                        # AM/PM indicator
	                    Label:
	                        id: ampm
	                        text: 'XM'
	                        font_name: 'Roboto'
	                        markup: True
	                        font_size: 60
	                        halign: 'left'
	                        pos_hint: {'left': 1}
	                        size_hint: None, 1
	                        size: (self.texture_size[0], root.ids.time.height / 2)

		                                
                # Date
                Label:
                    id: calendar
                    text: 'Monday, Octember 32'
                    font_name: 'Roboto'
                    markup: True
                    font_size: 90
                    size: self.texture_size
                    size_hint: (None, None)

