<-TicketItem>:
    text_size: [None, None]
    #size: self.texture_size
    size_hint: (0.25, None)
    font_name: 'Roboto'
    markup: True
    #font_size: 50
    font_size: self.height * 0.45
    halign: 'center'
    padding: (0, 0)
    opacity: 0
    background_normal: ''
    #background_active: ''
    background_color: 0, 0, 0, 0.6
    #_scale: 1. if self.texture_size[0] < self.width else 1. if self.texture_size[0] is 0 else float(self.width) / self.texture_size[0]
	state_image: self.background_normal if self.state == 'normal' else self.background_down
	disabled_image: self.background_disabled_normal if self.state == 'normal' else self.background_disabled_down
	_scale: 1. if self.texture_size[0] < self.width else float(self.width) / self.texture_size[0]
	canvas:
		Color:
			rgba: self.background_color
		BorderImage:
			border: self.border
			pos: self.pos
			size: self.size
			source: self.disabled_image if self.disabled else self.state_image
		PushMatrix
		Scale:
			origin: self.center
			x: self._scale or 1.
			y: self._scale or 1.
		Color:
			rgba: self.disabled_color if self.disabled else self.color
		Rectangle:
			texture: self.texture
			size: self.texture_size
			pos: int(self.center_x - self.texture_size[0] / 2.), int(self.center_y - self.texture_size[1] / 2.)
		PopMatrix

<NewTicketItem>:
    background_color: 1, 0, 0, 0.85
    #font_size: 90
    size_hint: (.5, None)
    #size: self.texture_size

WindowManager:
    DashboardScreen:
        id: 'dashboard'
        canvas.before:
            Rectangle:
                pos: self.pos
                #size: root.bg_texture.texture.size
                size: self.size
                source: 'bg.jpg'

        BoxLayout:
            orientation: 'vertical'
            padding: 20

            BoxLayout:
                orientation: 'horizontal'

                BoxLayout:
                    id: left_layout
                    orientation: 'vertical'
                    size_hint: (0.66, 1)

                    BoxLayout:
                        size_hint: 1, 0.1
                        Button:
                            id: ticket_header
                            text: 'Open Tickets'
                            background_normal: ''
                            background_color: 0, 0, 0, 0
                            #size_hint: 1, 0.1
                            font_size: 70
                            markup: True
                            on_press: app.get_tickets_from_sheet()

                    StackLayout:
                        id: tickets
                        spacing: 10

                BoxLayout:
                    id: right_layout
                    size_hint: (0.33, 1)

        Label:
            id: spacer
            size_hint: (1, 0.2)


        AnchorLayout:
            anchor_y: 'bottom'
            anchor_x: 'left'
            size_hint: (1, 0.2)
            padding: 20

            BoxLayout:
                orientation: 'horizontal'

                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: (0.5, None)

                    Label:
                        id: time
                        text: '[b]00[/b]:00'
                        font_name: 'Roboto'
                        markup: True
                        font_size: 128
                        size_hint: (None, 1)
                        pos_hint: {'right': 1}
                        size: (self.texture_size[0], self.line_height)

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: (None, None)

                        Label:
                            id: seconds
                            text: '00'
                            font_name: 'Roboto'
                            markup: True
                            font_size: 60
                            halign: 'left'
                            pos_hint: {'left': 1}
                            size_hint: None, 1
                            #size: (self.texture_size[0], self.line_height / 2)
                            size: (self.texture_size[0], root.ids.time.height / 2)

                        Label:
                            id: ampm
                            text: 'XM'
                            font_name: 'Roboto'
                            markup: True
                            font_size: 60
                            halign: 'left'
                            pos_hint: {'left': 1}
                            size_hint: None, 1
                            size: (self.texture_size[0], root.ids.time.height / 2)

                Label:
                    id: calendar
                    text: 'Monday, Octember 32'
                    font_name: 'Roboto'
                    markup: True
                    font_size: 90
                    size: self.texture_size
                    size_hint: (None, None)
                    #size: (self.texture_size[0], self.line_height)
